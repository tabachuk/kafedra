<Grid
    x:Class="KafedraApp.Views.SubjectsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KafedraApp.Views" xmlns:controls="clr-namespace:KafedraApp.Controls"
    mc:Ignorable="d">

    <Grid.Resources>
        <Style x:Key="HeaderStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="DataStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
        <Style x:Key="SubjectsButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource FadeForegroundColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Background" Value="{DynamicResource FadeForegroundColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="80"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel
        HorizontalAlignment="Right"
        Orientation="Horizontal">
        <controls:IconButton
            ClipToBounds="False"
            Icon="&#xf574;"
            Text="Імпорт"
            Foreground="{DynamicResource FadeForegroundColor}"
            Margin="10,0"
            Width="200"
            FontSize="8"
            Style="{StaticResource RoundedButtonStyle}"
            Command="{Binding ImportSubjectsCommand}"/>
        <controls:IconButton
            ClipToBounds="False"
            Icon="&#xf067;"
            Text="Додати"
            Foreground="{DynamicResource FadeForegroundColor}"
            Margin="10,0"
            Width="200"
            FontSize="8"
            Style="{StaticResource RoundedButtonStyle}"
            Command="{Binding AddSubjectCommand}"/>
    </StackPanel>

    <Grid
        Grid.Row="1"
        VerticalAlignment="Top"
        Margin="0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle
            Grid.ColumnSpan="14"
            Fill="{DynamicResource FadeForegroundColor}"/>
        <Label
            Grid.Column="0"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="1"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="2"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="3"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="4"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="5"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="6"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="7"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="8"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="9"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="10"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="11"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="12"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="13"
            Content="Назва"
            Style="{StaticResource HeaderStyle}"/>
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Subjects}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Height="60"
                            Margin="0,5,0,0"
                            Background="{DynamicResource BackgroundColor}">
                            <Grid.ColumnDefinitions>
                                
                            </Grid.ColumnDefinitions>

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
    
</Grid>
