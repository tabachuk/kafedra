<Grid
    x:Class="KafedraApp.Views.SubjectsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KafedraApp.Views"
    xmlns:controls="clr-namespace:KafedraApp.Controls"
    mc:Ignorable="d">

    <Grid.Resources>
        <Style x:Key="HeaderStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="DataStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="80"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel
        HorizontalAlignment="Right"
        Orientation="Horizontal">
        <controls:IconButton
            ClipToBounds="False"
            Icon="&#xf574;"
            Text="Імпорт"
            Foreground="{DynamicResource FadeForegroundColor}"
            Margin="10,0"
            Width="200"
            FontSize="8"
            Style="{StaticResource RoundedButtonStyle}"
            Command="{Binding ImportSubjectsCommand}"/>
        <controls:IconButton
            ClipToBounds="False"
            Icon="&#xf067;"
            Text="Додати"
            Foreground="{DynamicResource FadeForegroundColor}"
            Margin="10,0"
            Width="200"
            FontSize="8"
            Style="{StaticResource RoundedButtonStyle}"
            Command="{Binding AddSubjectCommand}"/>
    </StackPanel>

    <Grid
        Grid.Row="1"
        VerticalAlignment="Top"
        Margin="0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="180"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Rectangle
            Grid.ColumnSpan="16"
            Fill="{DynamicResource FadeForegroundColor}"/>
        <Label
            Grid.Column="0"
            Content="Предмет"
            Style="{StaticResource HeaderStyle}"/>
        <Label
            Grid.Column="1"
            Content="Спеціальність"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="2"
            Content="Курс"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="3"
            Content="Кількість підгруп"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="4"
            Content="Семестр"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="5"
            Content="Кредити"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="6"
            Content="Всього"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="7"
            Content="Всього (аудиторних)"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="8"
            Content="Лекції"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="9"
            Content="Практичні"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="10"
            Content="Лабораторні"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="11"
            Content="Контрольна робота"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="12"
            Content="Курсова"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="13"
            Content="ІНДЗ"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="14"
            Content="Екзамен"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <Label
            Grid.Column="15"
            Content="Залік"
            Style="{StaticResource HeaderStyle}">
            <Label.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </Label.LayoutTransform>
        </Label>
        <ScrollViewer
            Grid.Row="1"
            Grid.ColumnSpan="16"
            VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Subjects}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Margin="0,5,0,0"
                            Background="{DynamicResource BackgroundColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="180"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="0"
                                Text="{Binding Name}"
                                TextWrapping="Wrap"
                                IsReadOnly="True"
                                BorderThickness="0"
                                HorizontalContentAlignment="Center"
                                Foreground="{DynamicResource ForegroundColor}"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Margin="10"/>
                            <Label
                                Grid.Column="1"
                                Content="{Binding Specialty}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="2"
                                Content="{Binding Course}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="3"
                                Content="{Binding Subgroups}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="4"
                                Content="{Binding Semester}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="5"
                                Content="{Binding Credits}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="6"
                                Content="{Binding TotalHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="7"
                                Content="{Binding TotalClassroomHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="8"
                                Content="{Binding LectureHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="9"
                                Content="{Binding PracticalHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="10"
                                Content="{Binding LaboratoryWorkHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="11"
                                Content="{Binding ControlWorkHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="12"
                                Content="{Binding CourseWorkHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="13"
                                Content="{Binding IndividualTaskHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="14"
                                Content="{Binding ExaminationHours}"
                                Style="{StaticResource DataStyle}"/>
                            <Label
                                Grid.Column="15"
                                Content="{Binding TestHours}"
                                Style="{StaticResource DataStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</Grid>
